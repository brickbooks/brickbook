<div class="wrapper">

  <!-- ADD SQUAD FORM -->
  <div class="card">
    <div class="card-title">Add New Squad Member</div>

    <input type="text" id="squadName" placeholder="Full Name">
    <input type="email" id="squadEmail" placeholder="Email Address">
    <input type="password" id="squadPass" placeholder="Temporary Password (optional)">
    <input type="file" id="squadPhoto" accept="image/*">

    <button class="btn-primary" onclick="addSquad()">Add Squad Member</button>
  </div>

  <!-- EXISTING SQUADS LIST -->
  <div class="table-card">
    <h2 style="margin-bottom:14px;">Current Squad Members</h2>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
