<script>
/* FETCH ALL SQUAD USERS */
function getAllSquads() {
  let squads = [];
  for (let key in localStorage) {
    if (key.startsWith("squad_")) {
      const data = JSON.parse(localStorage.getItem(key));
      squads.push({ email: key.replace("squad_", ""), ...data });
    }
  }
  return squads;
}

/* RENDER TABLE */
function renderSquads() {
  const tbody = document.getElementById("squadTable");
  tbody.innerHTML = "";

  const squads = getAllSquads();
  if (squads.length === 0) {
    tbody.innerHTML = `<tr><td colspan="4">No squads added yet.</td></tr>`;
    return;
  }

  squads.forEach(s => {
    tbody.innerHTML += `
      <tr>
        <td>${s.name}</td>
        <td>${s.email}</td>
        <td>${s.password ? s.password : "No password"}</td>
        <td><button class="btn-danger" onclick="deleteSquad('${s.email}')">Delete</button></td>
      </tr>
    `;
  });
}

/* ADD SQUAD */
function addSquad() {
  const name = document.getElementById("squadName").value.trim();
  const email = document.getElementById("squadEmail").value.trim().toLowerCase();
  const pass = document.getElementById("squadPass").value.trim();
  const file = document.getElementById("squadPhoto").files[0];

  if (!name || !email) {
    alert("Name and email are required.");
    return;
  }

  if (localStorage.getItem("squad_" + email)) {
    alert("A squad member with this email already exists.");
    return;
  }

  const password = pass || "brick123"; // auto-password

  let photoData = "";

  if (file) {
    const reader = new FileReader();
    reader.onload = e => {
      photoData = e.target.result;
      saveSquad();
    };
    reader.readAsDataURL(file);
  } else {
    saveSquad();
  }

  function saveSquad() {
    const obj = {
      name: name,
      email: email,
      password: password,
      photo: photoData,
      earnings: [],
      bookings: []
    };

    localStorage.setItem("squad_" + email, JSON.stringify(obj));
    alert("Squad member added.");
    renderSquads();
  }
}

/* DELETE SQUAD */
function deleteSquad(email) {
  if (!confirm("Delete this squad member?")) return;

  localStorage.removeItem("squad_" + email);
  renderSquads();
}

/* INIT */
renderSquads();
</script>

